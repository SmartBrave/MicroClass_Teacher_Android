<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/comment_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/comment_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hhhhhhhhhhhhhhhhhhhhhh"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/comment_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="nihchello world smart how are you aksdj;fkas;dkfj;askdfj;aksldjf;askdjf;askdfj;askdfj;askdjfa;skdjf;askdjfa;skdjf;askdjfa;sdkfja;skdjfa;sdkjf;aksjdf;askdjfsdkf;ajsdfkl;jasdkfj"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="48dp"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/comment_answer_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/comment_answer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hhhhhhhhhhhhhhhhhhhhhh"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/comment_answer_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:textSize="15dp"
                        android:text="nihchello world smart how are you aksdj;fkas;dkfj;askdfj;aksldjf;askdjf;askdfj;askdfj;askdjfa;skdjf;askdjfa;skdjf;askdjfa;sdkfja;skdjfa;sdkjf;aksjdf;askdjfsdkf;ajsdfkl;jasdkfj"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="85"
            >
            <ImageView
                android:id="@+id/comment_star_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                />
            <TextView
                android:id="@+id/comment_star_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/comment_answer_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/comment_answer_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/comment_answer_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/answer"
            />

    </LinearLayout>
</LinearLayout>